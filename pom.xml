<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.knime.maven</groupId>
		<artifactId>parent-pom</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>org.knime</groupId>
	<artifactId>knime-core</artifactId>
	<version>3.8.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<!--
			Use Jenkins's project parameterization capabilities to set a string 
			parameter named KNIME_TARGET_PLATFORM_URL to the desired P2 update site value. 
			For building locally you can set KNIME_TARGET_PLATFORM_URL in the respective 
			run configuration 'Environment' tab with a file:// or http:// URL value pointing 
			to the desired P2 update site.
		-->
		<knime.target.platform.url>${env.KNIME_TARGET_PLATFORM_URL}</knime.target.platform.url>
		<knime.shared.url>${env.KNIME_SHARED_URL}</knime.shared.url>
	</properties>

	<modules>
		<module>org.knime.core</module>
		<!-- <module>org.knime.core.tests</module> -->
		<module>org.knime.core.data.uritype</module>
		<module>org.knime.core.pmml</module>
		<module>org.knime.core.ui</module>
		<module>org.knime.update.core</module>
	</modules>

	<repositories>
		<repository>
			<id>org.knime.update.org</id>
			<layout>p2</layout>
			<url>${knime.target.platform.url}</url>
		</repository>
		<repository>
			<id>org.knime.update.shared</id>
			<layout>p2</layout>
			<url>${knime.shared.url}</url>
		</repository>
	</repositories>
</project>
