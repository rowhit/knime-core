	<groupId>org.knime</groupId>
	<artifactId>knime-core</artifactId>
	<version>3.8.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<!--
			Use Jenkins's project parameterization capabilities to set a string 
			parameter named KNIME_TARGET_PLATFORM_URL to the desired P2 update site value. 
			For building locally you can set KNIME_TARGET_PLATFORM_URL in the respective 
			run configuration 'Environment' tab with a file:// or http:// URL value pointing 
			to the desired P2 update site.
		-->
		<knime.target.platform.url>${env.KNIME_TARGET_PLATFORM_URL}</knime.target.platform.url>
	</properties>

	<modules>
