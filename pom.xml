		<module>org.knime.product.tests</module>
		<module>org.knime.workbench.repository.tests</module>
	</modules>

	<repositories>
		<repository>
			<id>org.knime.update.org</id>
			<layout>p2</layout>
			<url>${knime.target.platform.url}</url>
		</repository>
	</repositories>
</project>
